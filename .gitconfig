[user]

	email = chris.genest@gmail.com
	name = Chris GENEST

[color]

	diff = auto
	status = auto
	branch = auto
	ui = auto

[alias]

	st = status --short --branch
	ci = commit
	co = checkout
	lg = log --graph --pretty=tformat:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%an %cr)%Creset' --abbrev-commit --date=relative
	lga = log --graph --pretty=tformat:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%an %cr)%Creset' --abbrev-commit --date=relative --all -30
    oops = commit --amend --all --reuse-message=HEAD
	pr = pull --rebase
    prp = pull --rebase --prune
    pra = pull --rebase --autostash
	pf = push --force-with-lease

[core]

	pager = cat
	editor = code --wait
	excludesfile = /Users/cgenest/.gitignore_global
	quotepath = false
	autocrlf = false
	# Make `git rebase` safer on macOS
	# More info: <http://www.git-tower.com/blog/make-git-rebase-safe-on-osx/>
	trustctime = false
	whitespace = --trailing

[push]

	default = current
	followTags = true

[rerere]

	enabled = true
	autoupdate = true

[pull]

    default = current
    rebase = preserve

[rebase]

	autosquash = true
	update-refs = true

[color "branch"]

	current = cyan
	local = yellow
	remote = green

[color "diff"]

	meta = yellow bold
	frag = magenta bold # line info
	old = red # deletions
	new = green # additions

[diff]

	mnemonicPrefix = true
	renames = true
	wordRegex = .
	tool = intellij

[difftool "intellij"]

    cmd = /Applications/IntelliJ\\ IDEA.app/Contents/MacOS/idea diff $(cd $(dirname "$LOCAL") && pwd)/$(basename "$LOCAL") $(cd $(dirname "$REMOTE") && pwd)/$(basename "$REMOTE")

[pager]

    diff = diff-so-fancy | less --tabs=1,5 -RFX
    show = diff-so-fancy | less --tabs=1,5 -RFX

[commit]

	# https://help.github.com/articles/signing-commits-using-gpg/
	# gpgsign = true

[merge]

    ff = false
    conflictStyle = diff3
    log = true
    tool = intellij

[mergetool "intellij"]

    cmd = /Applications/IntelliJ\\ IDEA.app/Contents/MacOS/idea merge $(cd $(dirname "$LOCAL") && pwd)/$(basename "$LOCAL") $(cd $(dirname "$REMOTE") && pwd)/$(basename "$REMOTE") $(cd $(dirname "$BASE") && pwd)/$(basename "$BASE") $(cd $(dirname "$MERGED") && pwd)/$(basename "$MERGED")
    trustExitCode = true

[status]

    showUntrackedFiles = all

[log]

	abbrevCommit = true
	follow = true

[grep]

	extendedRegexp = true
